<Window x:Class="Brute_Force_password_cracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Brute_Force_password_cracker"
        mc:Ignorable="d"
        Title="Password Cracker" Height="500" Width="700"
        Background="#0D0D0D"
        FontFamily="Consolas">

    <Window.Resources>
        <SolidColorBrush x:Key="BgBrush" Color="#0D0D0D"/>
        <SolidColorBrush x:Key="MainBrush" Color="#00FF41"/>

        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource MainBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource MainBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource MainBrush}"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="{StaticResource MainBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource MainBrush}"/>
            <Setter Property="CaretBrush" Value="{StaticResource MainBrush}"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource MainBrush}"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource MainBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource MainBrush}"/>
        </Style>

        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="{StaticResource MainBrush}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderThickness="1" Margin="0,0,0,10" Padding="5">
            <TextBlock x:Name="tbxTitle"
                       Text="{Binding Title}" 
                       HorizontalAlignment="Center" 
                       FontSize="20" 
                       FontWeight="Bold"/>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderThickness="2" Margin="0,0,5,0" Padding="10">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="[...]" Command="{Binding FireCommand}" Width="50" Height="30" BorderThickness="0"/>
                        <TextBlock Grid.Column="1" Text="{Binding ZipPath}" VerticalAlignment="Center" Margin="5,0,0,0" Opacity="0.8"/>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="68*"/>
                            <ColumnDefinition Width="261*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="[...]" Width="50" Height="30" BorderThickness="0"/>
                        <TextBlock Grid.Column="1" Text="> slownik.txt" VerticalAlignment="Center" Margin="5,0,0,0" FontWeight="Bold" Grid.ColumnSpan="2"/>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="InputMin" Text="{Binding InputMin}" Width="30" Height="30" TextAlignment="Center" VerticalContentAlignment="Center"/>
                        <TextBox x:Name="InputMax" Text="{Binding InputMax}" Width="30" Height="30" Grid.Column="1" TextAlignment="Center" VerticalContentAlignment="Center" Margin="10 0 0 0"/>
                        <TextBlock Grid.Column="2" Text="Długość hasła OD / DO" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </Grid>

                    <CheckBox x:Name="CbLeters" Content="Litery" IsChecked="{Binding IsLeters}" Margin="0,5,0,0"/>
                    <CheckBox x:Name="CbCapital" Content="Duże litery" IsChecked="{Binding IsCapital}" Margin="0,5,0,0"/>
                    <CheckBox x:Name="CbNumbers" Content="Liczby" IsChecked="{Binding IsNumbers}" Margin="0,5,0,0"/>
                    <CheckBox x:Name="CbSymbols" Content="Znaki specjalne" IsChecked="{Binding IsSymbols}" Margin="0,5,0,0"/>

                    <PasswordBox x:Name="pwdZip" Margin="0 10" Visibility="Collapsed"/>
                    <TextBox x:Name="txtZip" Text="{Binding RuleText}" Margin="0 10"/>
                    <CheckBox x:Name="CbIteratively" Content="Sprawdzanie iteracyjne" IsChecked="{Binding IsIteratively}" Margin="0,5,0,0"/>
                    <CheckBox x:Name="CbRecursively" Content="Sprawdzanie rekurencyjne" IsChecked="{Binding IsRecursively}" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" BorderThickness="2" Margin="5,0,0,0">
                <ListBox x:Name="ResultsList" ItemsSource="{Binding Logs}" BorderThickness="0" Margin="5" FontFamily="Consolas">
                </ListBox>
            </Border>
        </Grid>

        <Button Grid.Row="2" Content="EXECUTE" 
                x:Name="btnExecute"
                Command="{Binding ExecuteCommand}"
                IsEnabled="{Binding IsExecuting}"
                Height="50" 
                Margin="0,15,0,0" 
                FontSize="24"
                Background="#002200"
                BorderThickness="2"/>
    </Grid>
</Window>